<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏-->
    <declare-styleable name="CustomTitleBar">
        <attr name="titleText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftText" format="string" />
        <attr name="showLeftImage" format="boolean" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="showOneRightImage" format="boolean" />
        <attr name="showSecondRightImages" format="boolean" />
        <attr name="rightOneImageRes" format="reference|color" />
        <attr name="rightSecondImageRes" format="reference|color" />
        <attr name="maxSize" format="integer" />
    </declare-styleable>

    <!--自定义RadioButton-->
    <declare-styleable name="CustomRadioButton">
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <attr name="drawableTop" format="reference" />
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableRight" format="reference" />
        <attr name="drawableBottom" format="reference" />
    </declare-styleable>

</resources>